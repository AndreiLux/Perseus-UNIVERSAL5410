Import( 'env' )
import os

if env['backend'] == 'kernel':
	SConscript(os.path.join(env['kernel'], 'sconscript'))
else:
	SConscript(os.path.join(env['os'] + '_userspace', 'sconscript'))
	SConscript(os.path.join('userspace', 'sconscript'))
